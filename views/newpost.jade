extends layout

block content
	.row
		.col-md-2(id="img")


		.col-md-8
			if fault
				.alert.alert-danger
					p You must fill inn title of post
			form(method="post")
				input.form-control(type="text",name="headline",placeholder="Title of your post")
				br
				textarea(name="textarea" class="form-control" rows="10" placeholder="Write your post here")
				br
				input.form-control(type="text",name="video",placeholder="Add your video url here")
				br
				input.form-control(type="text",name="url",placeholder="Add your url here")
				br
				button(type="submit" class="btn btn-primary") Post on Wall
		.col-md-2 	