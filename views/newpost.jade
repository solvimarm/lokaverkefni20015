extends layout

block content

	form(method="post")
		textarea(name="textarea" class="form-control" rows="10" placeholder="Write your post here")
		br
		button(type="submit" class="btn btn-primary") Post on Wall

		if entries
			p 
			each u in entries

				.container-fluid
					.panel.panel-success
							.panel-heading
								p#user #{u.username} 
								p#date writes on #{u.date}
						.panel-body 
							p#text #{u.text}