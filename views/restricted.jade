extends layout

block content
	.row
		
		.col-md-2

		.col-md-8
			if entries
				p 
				each u in entries

					a.container-fluid(href='/addcomment/'+ u.post_id)
						.panel.panel-primary
							.panel-heading
								p#text #{u.headline}
							.panel-body
								p#user #{u.username} 							
								p#date #{u.date}


					

		.col-md-2

