extends layout

block content

	.row


	.row
		.col-md-2
		.col-md-8
			.row
				.col-md-3
					.user-wrapper
						img.img-responsive(src="/banner.jpg")
				.col-md-3
					.description
						if entries
							p
							each u in entries
								h3 About #{u.username}
								p Name: solvi
								p Email: email
								p Phonenumber: pnumber
				.col-md-6
					h3 Biography:
					p 
						
			br
			if entries
				p
				each u in entries
					h2 Posts by #{u.username}
			if posted
				p
				each u in posted
					a.container-fluid(href='/addcomment/'+ u.post_id)
						.panel.panel-primary
							.panel-heading
								p#text #{u.headline}
							.panel-body
								p#date #{u.date}
		.col-md-2
